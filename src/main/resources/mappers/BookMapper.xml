<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iksadnorth.rmsoft.repository.BookRepository">

    <insert id="save" parameterType="com.iksadnorth.rmsoft.domain.Book">
        INSERT INTO book
            (title, author, publisher, isbn)
        VALUES
            (#{title}, #{author}, #{publisher}, #{isbn})
    </insert>

    <update id="update" parameterType="com.iksadnorth.rmsoft.domain.Book">
        UPDATE book
        SET
            title = #{title},
            author = #{author},
            publisher = #{publisher},
            isbn = #{isbn}
        WHERE
            id = #{id}
    </update>

    <select id="findByIsbn" parameterType="String" resultType="com.iksadnorth.rmsoft.domain.Book">
        SELECT * FROM book WHERE isbn = #{isbn}
    </select>

    <select id="findById" parameterType="Long" resultType="com.iksadnorth.rmsoft.domain.Book">
        SELECT * FROM book WHERE id = #{bookId}
    </select>

</mapper>